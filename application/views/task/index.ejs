<%- include('../layouts/header') %>
<div class="row">
    <div class="col">
        <% if(typeof message !== 'undefined' ) {%>
        <div class="alert alert-<%= message.type %>" role="alert">
            <%= message.text %>
        </div>
        <% } %>
        <div class="card">
            <div class="card-header">
                لیست وظایف
            </div>
            <div class="card-body">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>عنوان</th>
                            <th>دسته بندی</th>
                            <th>انجام دهنده</th>
                            <th>وضعیت</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>عنوان</th>
                            <th>دسته بندی</th>
                            <th>انجام دهنده</th>
                            <th>وضعیت</th>
                            <th>عملیات</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        <% tasks.forEach(task => { %>
                        <tr>
                            <td><%= task.title %></td>
                            <td><%= task.category %></td>
                            <td><%= task.assignee %></td>
                            <td>
                                <%- include('partials/status', {value: task.status}) %>
                            </td>
                            <td>
                                <a href="/tasks/show/<%= task.id %>">
                                    <i class="material-icons">
                                        remove_red_eye
                                    </i>
                                </a>
                                <a href="/tasks/edit/<%= task.id %>">
                                    <i class="material-icons">
                                        edit
                                    </i>
                                </a>
                                <a href="/tasks/delete/<%= task.id %>">
                                    <i class="material-icons">
                                        delete
                                    </i>
                                </a>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include('../layouts/footer') %>